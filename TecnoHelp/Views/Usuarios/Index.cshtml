@model IEnumerable<TecnoHelp.Models.Usuario>

@{
    ViewData["Title"] = "Gerenciamento de Usuários";
}

<div class="container" style="max-width: 900px;">

    <div class="text-center mb-4">
        <h1 class="mb-3">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary" style="width: auto; padding: 10px 25px;">Criar Novo Usuário</a>
    </div>

    <div class="item-list">
        @foreach (var item in Model)
        {
            <div class="item-card">
                <h5>@Html.DisplayFor(modelItem => item.Nome)</h5>
                <p><strong>Email:</strong> @Html.DisplayFor(modelItem => item.Email)</p>
                <p><strong>Perfil:</strong> @Html.DisplayFor(modelItem => item.TipoUsuario)</p>
                <p>
                    <strong>Status:</strong>
                    @if (item.Ativo)
                    {
                        <span class="status-aberto">Ativo</span>
                    }
                    else
                    {
                        <span class="status-resolvido">Inativo</span>
                    }
                </p>
                <div class="item-card-actions">
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </div>
            </div>
        }
    </div>
</div>