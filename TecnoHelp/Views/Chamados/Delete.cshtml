@model TecnoHelp.Models.Chamado

@{
    ViewData["Title"] = "Excluir Chamado";
}

<h1>@ViewData["Title"]</h1>

<h3>Você tem certeza que deseja excluir este chamado?</h3>
<div>
    <h4>Chamado</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Titulo)</dd>
        <dt class="col-sm-2">Solicitante</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Solicitante.Nome)</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Status.Nome)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para a Lista</a>
    </form>
</div>