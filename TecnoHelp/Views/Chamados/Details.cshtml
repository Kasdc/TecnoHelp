@model TecnoHelp.Models.Chamado

@{
    ViewData["Title"] = "Detalhes do Chamado";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Chamado</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Titulo)</dd>

        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Descricao)</dd>

        <dt class="col-sm-2">Solicitante</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Solicitante.Nome)</dd>

        <dt class="col-sm-2">Técnico</dt>
        <dd class="col-sm-10">@(Model.Tecnico?.Usuario.Nome ?? "Não atribuído")</dd>

        <dt class="col-sm-2">Categoria</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Categoria.Nome)</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Status.Nome)</dd>

        <dt class="col-sm-2">Prioridade</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Prioridade.Nivel)</dd>

        <dt class="col-sm-2">Data de Abertura</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DataAbertura)</dd>

        <dt class="col-sm-2">Data de Fechamento</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DataFechamento)</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-secondary">Editar</a> |
    <a asp-action="Index">Voltar para a Lista</a>
</div>